




<%= bootstrap_form_for @post do |p| %>
<div class="orange modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="text-white-stay modal-title" id="myModalLabel">Edit Post</h4>
      </div>
      <div class="white modal-body">
  <%= p.text_field :title, placeholder: 'My interesting title' %>
  <%= p.text_field :link, placeholder: 'http://www.example.com' %>
  </div>
      <div class="orange modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
  <%= p.primary "Post" %>
  </div>
<% end %>













